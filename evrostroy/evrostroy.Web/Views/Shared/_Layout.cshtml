<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ЛюксЕвроСтрой", "MainPage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
         
            <div class="flr mr10 mt10">
                @Html.Partial("Enter")
            </div>
            <div class="flr mr40 mt10">
                @Html.Partial("Cart")
            </div>

            <br /><br />
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "MainPage", "Home")</li>
                    <li>@Html.ActionLink("Каталог", "Price", "Catalog")</li>
                    <li>@Html.ActionLink("Доставка", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Оплата", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Уценка", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Скидки и акции", "Contact", "Home")</li>
                    <li>@Html.ActionLink("О магазине", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Отзывы", "Contact", "Home")</li>
                </ul>
            </div>     
        </div>
    </div>
    <div class="navbar navbar-left fll col-lg-2" style="height:auto;padding-top:8em;border-style:dotted;z-index:100;position:absolute;">
        <p>Каталог:</p> <br />
        <p>Каталог:</p> <br />
        <p>Каталог:</p> <br />
        <p>Каталог:</p> <br />
        <p>Каталог:</p> <br />
        <p>Каталог:</p> <br />
    </div>
 
    <div class="container body-content mt60" style="margin-left:18vw;">
      
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ЛюксЕвроСтрой </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
