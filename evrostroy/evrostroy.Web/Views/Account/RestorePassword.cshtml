@model evrostroy.Web.Models.NewpasswordModel
@{
    ViewBag.Title = "Восстановление пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Для восстановления пароля укажите email адрес введенный при регистрации.</h2>
<div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationMessageFor(m => m.EmailUs)
        <div class="form-group">
            <label>Email:</label>
            @Html.TextBoxFor(m => m.EmailUs, new { @class = "form-control" })
        </div>
                  <input type="submit" value="Восстановить пароль" class="btn btn-primary" />
    }
    </div>



